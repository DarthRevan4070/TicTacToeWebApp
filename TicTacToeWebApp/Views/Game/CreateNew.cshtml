<h1>Tic-Tac-Toe</h1>
<p>Current Player: <strong>@Model.CurrentPlayer</strong></p>
<p>@Model.Result</p>

<table style="border-collapse: collapse; width: 200px;">
    @for (var i = 0; i < Model.Board.Count; i++) // Proper scoping with Razor
    {
        <tr>
            @for (var j = 0; j < Model.Board[i].Count; j++)
            {
                <td style="border: 1px solid black; height: 60px; width: 60px; text-align: center;">
                    @if (Model.Board[i][j] == '\0') // Proper null check
                    {
                        <form asp-action="MakeMove" method="post">
                            <input type="hidden" name="row" value="@i" />
                            <input type="hidden" name="col" value="@j" />
                            <button type="submit" style="width: 100%; height: 100%;">Move</button>
                        </form>
                    }
                    else
                    {
                        <span>@Model.Board[i][j]</span>
                    }
                </td>
            }
        </tr>
    }
</table>

<!-- Save and Open Saved Games buttons -->
<div style="margin-top: 20px;">
    <a href="/Game/SaveGame" class="btn btn-success">Save Game</a>
    <a href="/Game/OpenSavedGames" class="btn btn-primary">Open Saved Game</a>
    <a href="/Home/Index" class="btn btn-secondary">Back to Main Menu</a>
</div>
